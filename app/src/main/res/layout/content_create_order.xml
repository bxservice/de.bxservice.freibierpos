<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_create_order"
    tools:context="de.bxservice.bxpos.CreateOrderActivity"
    android:orientation="vertical">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:columnCount="3"
        android:orientation="horizontal">

        <Button
            android:text="Salads"
            android:id="@+id/button"
            android:layout_gravity="fill_horizontal"/>

        <Button
            android:text="Sandwiches"
            android:id="@+id/button1"
            android:layout_gravity="fill_horizontal"/>

        <Button
            android:text="Main"
            android:id="@+id/button11"
            android:layout_gravity="fill_horizontal"/>

        <Button
            android:text="Appetizers"
            android:id="@+id/button12"
            android:layout_gravity="fill_horizontal"/>

        <Button
            android:text="Sweets"
            android:id="@+id/button13"
            android:layout_gravity="fill_horizontal"/>

        <Button
            android:text="Drinks"
            android:id="@+id/button14"
            android:layout_gravity="fill_horizontal"/>

    </GridLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="13"
        android:columnCount="2"
        android:orientation="horizontal"
        android:layout_gravity="fill"
        >

        <Button
            android:text="Rugula"
            android:id="@+id/button2"

            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1" />

        <Button
            android:text="Caesar Salad"
            android:id="@+id/button5"

            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1" />

        <Button
            android:text="Chicken Salad"
            android:id="@+id/button4"

            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1" />

        <Button
            android:text="Egg Salad"
            android:id="@+id/button3"

            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1" />



    </GridLayout>



</LinearLayout>
